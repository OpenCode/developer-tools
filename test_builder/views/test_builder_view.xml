<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="test_builder_form">
            <field name="name">test.builder.form</field>
            <field name="model">test.builder</field>
            <field name="arch" type="xml">
                <form string="Test Builder">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" />
                            <h1>
                                <field name="name"/>
                            </h1>
                            <group>
                                <field name="model_id"/>
                            </group>
                        </div>
                        <div class="oe_right oe_button_box" name="buttons">
                            <field name="ref_ir_act_window_id"
                                invisible="1" />
                            <button class="oe_inline oe_stat_button"
                                name="create_action" type="object"
                                attrs="{'invisible':[('ref_ir_act_window_id','!=',False)]}"
                                icon="fa-plus"
                                help="Display a button in the sidebar of related documents to open a composition wizard">
                                <div>Add<br />Sidebar Button</div>
                            </button>
                            <button name="unlink_action" type="object"
                                class="oe_stat_button" icon="fa-minus"
                                attrs="{'invisible':[('ref_ir_act_window_id','=',False)]}"
                                help="Remove the contextual action to use this template on related documents"
                                widget="statinfo">
                                <div>Remove<br />Sidebar Button</div>
                            </button>
                        </div>
                        <field name="fields_ids" colspan="4">
                            <tree editable="top">
                                <field name="field_id"
                                       domain="[('model_id', '=', parent.model_id)]"/>
                            </tree>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="test_builder_tree">
            <field name="name">test.builder.tree</field>
            <field name="model">test.builder</field>
            <field name="arch" type="xml">
                <tree string="Test Builder">
                    <field name="name" />
                    <field name="model_id" />
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="test_builder_action">
            <field name="name">Test Builder</field>
            <field name="res_model">test.builder</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="test_builder_tree" />
        </record>

        <menuitem id="menu_test_builder" name="Test Builder"
            parent="base.menu_administration" sequence="6" />

        <menuitem id="menu_test_builder_view" action="test_builder_action"
            parent="menu_test_builder" />

    </data>
</openerp>
